{
  "name": "medcloud-app",
  "version": "1.0.0",
  "description": "epcr cloud app",
  "main": "index.js",
  "config":  {
      "port": "9000"
  },
  "scripts": {
    "predev-server":  "npm i; npm run babelcheck;npm run vendor",
    "dev-server":     "node node_modules/npm-parallel/bin/parallel.js express babel livereload watch-js",
    "clean":          "rm -rf build",
    "prebuild":       "npm run clean",
    "build":          "babel assets -D --out-dir build",
    "postbuild":      "npm run vendor",
    "babelcheck":     "type babel >/dev/null 2>&1 || { echo >&2 \"installing babel globally\"; npm i -g babel;exit 0;}",
    "babel":          "babel assets -D --watch --out-dir build",
    "express":        "node server.js",
    "vendor":         "cp -r vendor build/vendor",
    "livereload":     "node node_modules/livereload/bin/livereload.js assets",
    "watch-js":       "watch-run node eslint assets/js",
    "preserver":      "npm i; npm run babelcheck;npm run build;",
    "server":	      "node server.js"
  },
  "author": "nick fiorini <nf071590@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^1.5.0",
    "express": "^4.13.3",
    "livereload": "^0.3.7",
    "mongodb": "^2.0.43",
    "npm-parallel": "^2.0.1",
    "split": "^1.0.0",
    "watch-run": "^1.2.2"
  }
}
